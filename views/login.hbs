<div class="row ">
  <div class="col-md-5 mt-5 m-auto">
    <div class="card card-body">
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label class="mb-2" for="email">Email</label>
          <input class="form-control" type="text" id="email" name="email" placeholder="email@example.com..." required>
        </div>
        <div class="mb-4">
          <label class="mb-2" for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" placeholder="password..." required>
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">
            Login
          </button>
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
          <p class="lead mt-2">
            No Account?<a class="register-login" href="/users/register"> Register</a>
          </p>

        </div>
      </form>
    </div>
  </div>
</div>