<div class="row ">
  <div class="col-md-6 mt-5 m-auto">
    <div class="card card-body">
      {{!-- 列s --}}
      <div class="row mt-5">

        <div class="col-3 d-flex justify-content-end align-items-center">
          <p style="font-size: 10px;">*必填欄位</p>
        </div>

        <div class="col-8 d-flex justify-content-center">
          <p style="font-size: 20px;">請輸入你的支出</p>
        </div>

      </div>
      {{!-- 列e --}}

      {{!-- 列s --}}
      <form action="/records/new" method="POST">
        <div class="row mt-5">

          <div class="col-3 d-flex justify-content-end align-items-center">
            <p style="font-size: 10px;">名稱*：</p>
          </div>

          <div class="col-8" style="margin-top: -10px;">
            <input class="form-control" type="text" id="name" name="name" placeholder="午餐 ...">
          </div>

        </div>
        {{!-- 列e --}}
        {{!-- 列s --}}
        <div class="row mt-5">

          <div class="col-3 d-flex justify-content-end align-items-center">
            <p style="font-size: 10px;">日期*：</p>
          </div>

          <div class="col-8" style="margin-top: -10px;">
            <input class="form-control" type="date" id="date" name="date" placeholder="2019 / 04 / 23 ...">
          </div>

        </div>
        {{!-- 列e --}}
        {{!-- 列s --}}
        <div class="row mt-5">

          <div class="col-3 d-flex justify-content-end align-items-center">
            <p style="font-size: 10px;">類別*：</p>
          </div>

          <div class="col-8" style="margin-top: -10px;">
            <select class="form-select" id="validationServer02" aria-describedby="validationServer02Feedback"
              selectedIndex="" name="category">
              <option selected disabled value="">類別</option>
              <option value='家居物業'>家居物業</option>
              <option value='交通出行'>交通出行</option>
              <option value='休閒娛樂'>休閒娛樂</option>
              <option value='餐飲食品'>餐飲食品</option>
              <option value='其他'>其他</option>
            </select>
          </div>

        </div>
        {{!-- 列e --}}
        {{!-- 列s --}}
        <div class="row mt-5">

          <div class="col-3 d-flex justify-content-end align-items-center">
            <p style="font-size: 10px;">金額*：</p>
          </div>

          <div class="col-8" style="margin-top: -10px;">
            <input class="form-control" type="text" id="amount" name="amount" placeholder="123456 ...">
          </div>

        </div>
        {{!-- 列e --}}
        {{!-- 列s --}}
        <div class="row mt-5">

          <div class="col-3 d-flex justify-content-end align-items-center">
            <p style="font-size: 10px;"></p>
          </div>

          <div class="col-8 d-grid" style="margin-top: -10px;">
            <button class="btn btn-primary" type="submit">
              新增支出
            </button>
          </div>

        </div>
      </form>
      {{!-- 列e --}}
    </div>
  </div>
</div>